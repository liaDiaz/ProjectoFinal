<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfranjas"
    tools:context=".escogerTypoCilindro">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="291dp"
            android:layout_height="91dp"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif"
            android:text="Escoge tipo de Termo"
            android:textAlignment="center"
            android:textColor="#130B0B"
            android:textSize="34sp"
            android:alpha="10.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="134dp"
            android:layout_height="147dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="40dp"
            android:background="#8a7f80"
            android:alpha="0.8"
            android:src="@drawable/cilindro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="141dp"
            android:layout_height="145dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="22dp"
            android:background="#8a7f80"
            android:alpha="0.8"
            android:src="@drawable/vasocontapa"
            app:layout_constraintEnd_toStartOf="@+id/imageButton5"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textvaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="Vaso"
            android:textColor="#201F1F"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/textcilindro"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton6" />

        <TextView
            android:id="@+id/textcilindro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="80dp"
            android:text="cilindro"
            android:textColor="#201F1F"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="138dp"
            android:layout_height="141dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:alpha="0.8"
            android:background="#8a7f80"
            android:src="@drawable/vasocoffe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textvaso" />

        <TextView
            android:id="@+id/textVasoCoffe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:text="Coffe"
            android:textColor="#201F1F"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton7"
            app:layout_constraintVertical_bias="0.082" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="125dp"
            android:layout_height="141dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:background="#8a7f80"
            android:alpha="0.8"
            android:src="@drawable/vasochupon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageButton7"
            app:layout_constraintTop_toBottomOf="@+id/textcilindro" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Drink"
            android:textColor="#201F1F"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.579"
            app:layout_constraintStart_toEndOf="@+id/textVasoCoffe"
            app:layout_constraintTop_toBottomOf="@+id/imageButton8"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>